<RadzenCard Style="margin-bottom: 200px; width: fit-content; min-width: 200px;" Class="mt-3 mx-auto">
    <RadzenMenu Click="OnParentClicked">
        <RadzenMenuItem Text="Current Shift" Icon="home">
            <RadzenMenuItem Text="View Shift" Path="buttons" Icon="account_circle"></RadzenMenuItem>
            <RadzenMenuItem Text="Logedin User" Path="menu" Icon="line_weight"></RadzenMenuItem>
            <RadzenMenuItem Text="Offline User" Path="dialog" Icon="perm_media"></RadzenMenuItem>
            <RadzenMenuItem Text="Notification" Path="notification" Icon="announcement"></RadzenMenuItem>
        </RadzenMenuItem>
        <RadzenMenuItem Text="Financial" Icon="payment">
            <RadzenMenuItem Text="Report 1" Path="checkbox" Icon="check_circle"></RadzenMenuItem>
            <RadzenMenuItem Text="Report 2" Path="textbox" Icon="input"></RadzenMenuItem>
            <RadzenMenuItem Text="Report 3" Path="textarea" Icon="description"></RadzenMenuItem>
            <RadzenMenuItem Text="Report 4" Path="password" Icon="payment"></RadzenMenuItem>
            <RadzenMenuItem Text="Report 5" Path="numeric" Icon="aspect_ratio"></RadzenMenuItem> 
        </RadzenMenuItem>
        <RadzenMenuItem Text="Statistics" Icon="save">
            <RadzenMenuItem Text="View Report" Path="datagrid" Icon="grid_on"></RadzenMenuItem>
            <RadzenMenuItem Text="Report 2" Path="datalist" Icon="list"></RadzenMenuItem>
            <RadzenMenuItem Text="Generate Report" Path="dropdown" Icon="dns"></RadzenMenuItem> 
        </RadzenMenuItem>
        <RadzenMenuItem Text="Export" Icon="account_box">
            <RadzenMenuItem Text="Export to Server1" Path="tabs" Icon="tab"></RadzenMenuItem>
            <RadzenMenuItem Text="Export to Server2" Path="panel" Icon="content_paste"></RadzenMenuItem>
            <RadzenMenuItem Text="Export to Server3" Path="fieldset" Icon="account_balance_wallet"></RadzenMenuItem>
            <RadzenMenuItem Text="Export to Server4" Path="card" Icon="line_style"></RadzenMenuItem>
        </RadzenMenuItem>
        <RadzenMenuItem Text="Utilities">
            <RadzenMenuItem Text="Calculator"></RadzenMenuItem>
            <RadzenMenuItem Text="Time zone"></RadzenMenuItem>           
        </RadzenMenuItem>
        <RadzenMenuItem Text="View" Icon="account_box">
            <RadzenMenuItem Text="Horizontal View" Path="tabs" Icon="tab"></RadzenMenuItem>
            <RadzenMenuItem Text="Vertical View" Path="panel" Icon="content_paste"></RadzenMenuItem>
            <RadzenMenuItem Text="Cascading" Path="fieldset" Icon="account_balance_wallet"></RadzenMenuItem>
        </RadzenMenuItem>
        <RadzenMenuItem Text="Plugins" Icon="account_box">
            <RadzenMenuItem Text="Add Plugins" Path="tabs" Icon="tab"></RadzenMenuItem>
            <RadzenMenuItem Text="Plugins List" Path="panel" Icon="content_paste"></RadzenMenuItem>
        </RadzenMenuItem>
        <RadzenMenuItem Text="Help" Icon="account_box">
            <RadzenMenuItem Text="View Help" Path="tabs" Icon="tab"></RadzenMenuItem>
            <RadzenMenuItem Text="About us" Path="panel" Icon="content_paste"></RadzenMenuItem>
        </RadzenMenuItem>

    </RadzenMenu>
</RadzenCard>

<EventConsole @ref=@console class="mt-4" />

@code {
    EventConsole console;

    void OnParentClicked(MenuItemEventArgs args)
    {
        console.Log($"{args.Text} clicked from parent");
    }

    void OnChildClicked(MenuItemEventArgs args)
    {
        console.Log($"{args.Text} from child clicked");
    }
}